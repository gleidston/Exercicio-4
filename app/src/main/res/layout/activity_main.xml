<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".MainActivity">


    <android.support.constraint.ConstraintLayout
            android:layout_width="286dp"
            android:layout_height="536dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal" android:id="@+id/telas2" android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="90dp"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" android:background="@drawable/logo"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="120dp"
                app:layout_constraintBottom_toTopOf="@+id/editPrecoAlcool" android:contentDescription="TODO"
                android:layout_marginStart="1dp"
                app:layout_constraintVertical_bias="0.6" android:layout_marginTop="2dp" android:layout_marginEnd="1dp"/>
        <TextView
                android:text="@string/saiba_qual_a_melhor_op_o_para_abastecer_seu_veiculo_hoje"
                android:layout_width="209dp"
                android:layout_height="92dp"
                android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" android:textSize="19sp"
                android:textColor="@color/coral" app:layout_constraintHorizontal_bias="0.532"
                android:textStyle="normal" android:paddingLeft="10dp" android:paddingTop="10dp"
                android:paddingRight="10dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage|numberDecimal"
                android:ems="10"
                android:id="@+id/editPrecoAlcool"
                android:hint="Preço Álcool ex: 2.69" app:layout_constraintStart_toStartOf="@+id/editPrecoGasolina"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editPrecoGasolina" android:autofillHints=""/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editPrecoGasolina"
                android:hint="Preço Gasolina ex: 4.69" app:layout_constraintTop_toBottomOf="@+id/editPrecoAlcool"
                android:layout_marginBottom="30dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:autofillHints=""/>

    </android.support.constraint.ConstraintLayout>
    <Button
            android:textSize="24sp"
            android:layout_width="287dp"
            android:layout_height="65dp"
            android:background="@drawable/gradient_background"
            android:layout_alignParentBottom="true"
            android:text="Calcular"
            android:textColor="#ffff"
            android:onClick="calcularpreco" android:id="@+id/button3"
            android:layout_gravity="center_horizontal" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.508"/>
    <TextView
            android:layout_below="@+id/imageView"
            android:text="Calculadora de Combustivel "
            android:layout_width="109dp"
            android:layout_height="32dp" android:id="@+id/textView2"
            android:layout_marginTop="8dp" android:fontFamily="monospace" android:textSize="12sp"
            android:textColor="#ffffff" android:textAlignment="center" android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>